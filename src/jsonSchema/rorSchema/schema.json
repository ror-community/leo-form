{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ip_addresses": {
      "type": "array"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "acronyms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "country": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "country_code": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "country_name": {
          "type": "string"
        }
      },
      "required": ["country_code", "country_name"]
    },
    "name": {
      "$ref": "#/definitions/non-empty-string"
    },
    "wikipedia_url": {
      "type": "string"
    },
    "addresses": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "geonames_city": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "city": {
              "type": "string"
            },
            "id": {
              "type": "integer"
            }
          },
          "required": ["city", "id"]
        }
      },
      "required": ["geonames_city"]
    },
    "types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Education",
          "Healthcare",
          "Company",
          "Archive",
          "Nonprofit",
          "Government",
          "Facility",
          "Other"
        ]
      }
    },
    "established": {
      "type": ["string", "number"],
      "default": 0
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["Related", "Parent", "Child"]
          },
          "id": {
            "type": "string",
            "pattern": "^https://ror.org/0[a-z|0-9]{8}$"
          },
          "label": {
            "$ref": "#/definitions/non-empty-string"
          }
        },
        "required": ["id", "label", "type"]
      }
    },
    "email_address": {
      "type": "number"
    },
    "external_ids": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^.*?$": {
          "type": "object",
          "properties": {
            "all": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                {
                  "type": "string"
                }
              ]
            },
            "preferred": {
              "type": ["string", "number"]
            }
          },
          "required": ["all", "preferred"]
        }
      },
      "additionalProperties": false
    },
    "id": {
      "type": "string",
      "pattern": "^https://ror.org/0[a-z|0-9]{8}$"
    },
    "labels": {
      "type": "array",
      "items": {
        "properties": {
          "label": {
            "type": "string"
          },
          "iso639": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2
          }
        },
        "required": ["label", "iso639"]
      }
    },
    "status": {
      "type": "string",
      "enum": ["active"]
    }
  },
  "definitions": {
    "non-empty-string": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["name", "types", "established", "addresses"]
}
