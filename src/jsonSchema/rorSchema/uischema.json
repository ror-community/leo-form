{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "scope": "#/properties/established"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/types",
          "options": {
            "type": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/wikipedia_url"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/aliases",
          "title": "Aliases",
          "options": {
            "genList": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/acronyms",
          "options": {
            "genList": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/links",
          "options": {
            "genList": true
          },
          "schema": {
            "pattern": "^http[s]://.*?"
          }
        }
      ]
    },
    {
      "type": "ListWithDetail",
      "scope": "#/properties/labels",
      "options": {
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/label",
                  "label": "Label"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/iso639",
                  "label": "Language Code",
                  "options": {
                    "langCode": true
                  }
                }
              ]
            }
          ]
        }
      }
    },
    {
      "type": "ListWithDetail",
      "scope": "#/properties/addresses",
      "options": {
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/geonames_city/properties/id",
                  "label": "LocationID",
                  "options": {
                    "locationId": true
                  }
                },
                {
                  "type": "Control",
                  "scope": "#/properties/geonames_city/properties/city",
                  "label": "City",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "Latitude",
                  "scope": "#/properties/lat",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "Longitude",
                  "scope": "#/properties/lng",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "Country Geonames ID",
                  "scope": "#/properties/country_geonames_id",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "Geonames Admin 1",
                  "scope": "#/properties/geonames_city/properties/geonames_admin1",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/geonames_admin1/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "Geonames Admin 2",
                  "scope": "#/properties/geonames_city/properties/geonames_admin2",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/geonames_admin2/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                },
                {
                  "type": "Control",
                  "label": "License attribution",
                  "scope": "#/properties/geonames_city/properties/license",
                  "rule": {
                    "effect": "SHOW",
                    "condition": {
                      "scope": "#/properties/geonames_city/properties/id",
                      "schema": {
                        "type": "number"
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "Country Name",
          "scope": "#/properties/country/properties/country_name"
        },
        {
          "type": "Control",
          "label": "Country Code",
          "scope": "#/properties/country/properties/country_code"
        }
      ]
    },
    {
      "type": "Categorization",
      "elements": [
        {
          "type": "Category",
          "label": "GRID",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/GRID"
                }
              ]
            }
          ]
        },
        {
          "type": "Category",
          "label": "ISNI",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/ISNI/properties/preferred"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/ISNI/properties/all",
                  "options": {
                    "genList": true
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Category",
          "label": "FundRef",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/FundRef/properties/preferred"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/FundRef/properties/all",
                  "options": {
                    "genList": true
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Category",
          "label": "Wikidata",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/Wikidata/properties/preferred"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/external_ids/properties/Wikidata/properties/all",
                  "options": {
                    "genList": true
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "Status",
          "scope": "#/properties/status"
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "ROR ID",
          "scope": "#/properties/id"
        }
      ]
    }
  ]
}
